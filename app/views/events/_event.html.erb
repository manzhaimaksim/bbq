<div class="col-sm-6 col-md-4">
  <div class="thumbnail">
    <%= content_tag 'div', '', class: 'event-background', style: "background-image: url(#{asset_path('event_thumb.jpg')})" %>
    <div class="thumbnail-inner event-info-inner ">
      <div class="caption">
        <div class="event-description d-flex flex-column">
          <h4 class="flex-fill"><%= link_to event.title, event_path(event) %></h4>
          <% if current_page?(:controller => 'events', :action => 'index') %>
            <h4 class="flex-fill">Организатор: <%= link_to event.user.name, user_path(event.user) %></h4>
          <% end %>
          <h4 class="flex-fill" ><small><%= l event.datetime, format: :short %></small></h4>
          <div class="buffer-both flex-fill"><%= event.address %></div>
          <div class="flex-fill">
            <% event.visitors.each do |user| %>
              <%= image_tag user_avatar_thumb(user), class: 'img-icon', title: user.name %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
