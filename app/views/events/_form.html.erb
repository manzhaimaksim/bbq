<%= form_for(@event) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

<!--  <script type="text/javascript">-->
<!--    $('#my-element').datepicker([options])-->

<!--    // Доступ к экземпляру объекта-->
<!--    $('#my-element').data('datepicker')-->
<!--  </script>-->

<!--  <input id="my-element" type='text' class='datepicker-here' />-->

  <div class="form-group">
    <%= f.label :datetime %>
    <p><%= f.datetime_select :datetime, default: 61.minutes.from_now, class: 'form-control' %></p>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :pincode %>
    <%= f.text_field :pincode, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
    или <%= link_to 'вернуться', :back %>
  </div>
<% end %>
